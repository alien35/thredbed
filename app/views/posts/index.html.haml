.nav_decoy

.container.organize_rows#my-posts
  = render @posts
%br
  .col-md-offset-6
    -if user_signed_in?
      All posts
.container.organize_rows#my-posts
  -if user_signed_in?
    - Post.paginate(page: params[:page], per_page: 12).order(cached_weighted_total: :desc).each do |post|
      .item
        .well
          - if user_signed_in?
            %span= link_to (index_profile_avatar_select(post.user)), profile_path(post.user.user_name)
            %span.index_name= link_to user_bio(post.user), profile_path(post.user.user_name)
          - else
            =index_profile_avatar_select(post.user)
            %li.signed_out_names=post.user.user_name
          =link_to (image_tag post.image.url(:medium)), post_path(post)
          %ul
          %h3=post.title
          %h5=caption_max_length(post.commentary)
          %span Tags:
          %span=raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(", ")
          .small_font=comment_count_index(post)
          .small_font=time_ago_in_words post.created_at
          %hr=link_to post.link, post.link


#infinite-scrolling
  = will_paginate

