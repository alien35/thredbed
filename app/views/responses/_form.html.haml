%span.dropdown
  .reply_button{"data-toggle" => "dropdown", :type => "button"}
    reply
    %span
  %ul.dropdown-menu#reply_form
    = simple_form_for([comment, comment.responses.build], remote: true)  do |f|
      %span= f.input :content, label: false, hint: '10 characters minimum'
      %span= f.submit "submit", class: "btn btn-default"

-if comment.responses.count > 0
  .signed_in_reply_line
