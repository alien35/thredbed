%br
%ul.post_info
  - begin
    - if @post.user.id == current_user.id
      = link_to 'Edit', edit_post_path(@post)
      = link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" }
  - rescue NoMethodError
  %li Check out the reference:
  = link_to @post.link, @post.link
  %li Post created #{time_ago_in_words @post.created_at} ago
  - if user_signed_in?
    = link_to index_profile_avatar_select(@post.user), profile_path(@post.user.user_name)
    %li.index_name=link_to @post.user.user_name, profile_path(@post.user.user_name)
  - else
    = index_profile_avatar_select(@post.user)
    %li.signed_out_names=@post.user.user_name
.comment_format
  %h1.post_title= @post.title
  %li= @post.commentary
  .comment-like-form.row
    .col-sm-1
      =link_to '', like_post_path(@post.id), remote: true,
                                              id: "like_#{@post.id}",
                                              class: "glyphicon glyphicon-thumbs-up"
= render 'posts/likes'
.comment_format
  .comments{id: "comments_#{@post.id}"}
    - if @post.comments.any?
      = render @post.comments, post: @post
- if user_signed_in?
  .comment_format
    = simple_form_for([@post, @post.comments.build], remote: true)  do |f|
      = f.input :content, label:'Add your commentary:'
      = f.submit class: "btn btn-primary"
