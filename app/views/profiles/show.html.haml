.posts-wrapper
  = profile_avatar_select(@user)
  %h3.profile-user-name
    = @user.user_name
  - if @user == current_user
    = link_to 'Edit Profile', edit_profile_path(@user.user_name),
                          class: 'btn edit-button'
  - else
    = render 'follow_unfollow'
  %span= followers_count(@user)
  %span following
  %span= @user.following.count

  %p.profile-bio
    = @user.bio
  .user-statistics
    %p
    = pluralize @user.posts.count, 'post'


.container.organize_rows#my-posts
  = render @posts

