  - Post.paginate(page: params[:page], per_page: 12).order(cached_weighted_total: :desc).each do |post|
    .item
      .well
        - if user_signed_in?
          = link_to (index_profile_avatar_select(post.user)), profile_path(post.user.user_name)
          %li.index_name=link_to post.user.user_name, profile_path(post.user.user_name)
        - else
          =index_profile_avatar_select(post.user)
          %li.signed_out_names=post.user.user_name
        =link_to (image_tag post.image.url(:medium)), post_path(post)
        %ul
        %h3=title_max_length(post.title)
        %li=caption_max_length(post.commentary)
        %li=comment_count_index(post)
        =time_ago_in_words post.created_at
